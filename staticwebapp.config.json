{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/images/*",
      "/images/logo/*",
      "/images/platforms/*",
      "/assets/*",
      "/*.ico",
      "/*.txt",
      "/*.xml",
      "/manifest.json",
      "/robots.txt"
    ]
  },
  "routes": [
    {
      "route": "/",
      "rewrite": "/index.html"
    },
    {
      "route": "/about",
      "rewrite": "/index.html"
    },
    {
      "route": "/skills",
      "rewrite": "/index.html"
    },
    {
      "route": "/projects",
      "rewrite": "/index.html"
    },
    {
      "route": "/contact",
      "rewrite": "/index.html"
    },
    {
      "route": "/blog",
      "rewrite": "/index.html"
    },
    {
      "route": "/blog/*",
      "rewrite": "/index.html"
    },
    {
      "route": "/admin",
      "rewrite": "/index.html"
    },
    {
      "route": "/admin/*",
      "rewrite": "/index.html"
    }
  ],
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200
    }
  },
  "globalHeaders": {
    "X-Frame-Options": "SAMEORIGIN",
    "X-Content-Type-Options": "nosniff",
    "Referrer-Policy": "strict-origin-when-cross-origin"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".webp": "image/webp",
    ".woff2": "font/woff2"
  }
}
